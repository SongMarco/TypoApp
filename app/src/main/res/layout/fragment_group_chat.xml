<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical">


    <Button
        android:id="@+id/btnStartChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="그룹 채팅하기" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvChatList"
        android:name="nova.typoapp.CommentFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_border"
        android:layout_marginRight="@dimen/margin_border"
        android:layout_weight="1"
        app:layoutManager="LinearLayoutManager"
        tools:context="nova.typoapp.CommentFragment"
        tools:listitem="@layout/fragment_chat_item"
      />

    <LinearLayout
        android:id="@+id/layoutChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etChatText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="메세지를작성해주세요" />

        <Button
            android:id="@+id/btnSendChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="전송" />
    </LinearLayout>




</LinearLayout>

