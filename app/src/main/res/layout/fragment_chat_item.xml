<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgChatProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"


      android:layout_margin="@dimen/margin_border"

        android:scaleType="centerCrop"

        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <LinearLayout
        android:id="@+id/layoutChatBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"

        android:clickable="true"
        android:focusable="true"


        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChatWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_border"
            android:layout_marginTop="@dimen/margin_border"
            android:layout_weight="1"
            android:text="작성자"

            android:textColor="@color/fontGrey"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvChatTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:layout_weight="0"
                android:text="오후 2:17"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutChatBubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"


                android:layout_margin="@dimen/margin_border"

                android:layout_weight="1"

                android:orientation="vertical"


                android:background="@drawable/bubblein"




               >


                <TextView
                    android:id="@+id/tvChatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_border"

                    android:layout_weight="1"


                    android:text="dddddddddddddddddddddddddddddddd"
                    android:textColor="@color/fontGrey"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvChatTimeRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:layout_weight="0"
                android:text="오후 2:17" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
