<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgProfileMember"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_margin="@dimen/margin_border"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <LinearLayout
        android:id="@+id/layoutMemberBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_weight="1"


        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNameMember"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_border"
            android:layout_weight="1"
            android:text="회원명"

            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLevelMember"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"


            android:layout_margin="@dimen/margin_balloon"

            android:layout_weight="0"

            android:text="회원등급"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imgBanMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_border"

            android:layout_weight="0"
            android:visibility="gone"

            app:srcCompat="@android:drawable/ic_delete" />

    </LinearLayout>

</LinearLayout>
