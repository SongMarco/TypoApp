<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_margin="@dimen/margin_border">



    <ImageView
        android:id="@+id/commentProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_border"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <LinearLayout
        android:id="@+id/layoutCommentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_border"
            android:layout_weight="1"

            android:background="@drawable/layout_bg"
            android:orientation="vertical"
            android:padding="@dimen/margin_balloon">

            <TextView
                android:id="@+id/commentWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="작성자"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commentContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"


                android:text="텍스트내용텍스트내용"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_border"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2017년 2월 5일" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="좋아요" />

            <TextView
                android:id="@+id/textViewCoComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="답글 달기" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_border">

            <TextView
                android:id="@+id/textViewSubCommentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 답글 n개 보기"
                android:textColor="@color/black" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>


