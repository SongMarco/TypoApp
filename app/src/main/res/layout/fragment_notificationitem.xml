<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="wrap_content"

    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_border"

        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/subCommentProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_margin="@dimen/margin_border"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

        <LinearLayout
            android:id="@+id/layoutSubCommentBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"

            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"


            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"

                android:orientation="vertical"
                android:padding="@dimen/margin_border">

                <TextView
                    android:id="@+id/subCommentContent"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"


                    android:text="Eric Song 님이 회원님의 단어 'apple'을 좋아합니다."
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/subCommentDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/margin_border"

                    android:layout_weight="1"
                    android:text="2017년 2월 5일" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/border_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:background="@color/borderGrey"

        />
</LinearLayout>