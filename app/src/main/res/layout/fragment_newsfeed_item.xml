<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cv"
    android:layout_width="match_parent"


    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_balloon">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_facebook_button_icon_white"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProf"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_border"

                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_border"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/feedWriter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_weight="1"
                    android:text="글쓴이"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="date" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewMore"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center"
                android:layout_marginRight="@dimen/text_margin"

                android:tint="@color/transGrey"


                card_view:srcCompat="@drawable/ic_more_vert_black_48dp" />

        </LinearLayout>

        <View
            style="@style/border_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:background="@color/borderGrey"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"
                android:text="글 제목"
                android:textAppearance="?attr/textAppearanceListItem" />


            <ImageView
                android:id="@+id/imageViewSound"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:layout_gravity="center"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_weight="0"


                android:tint="@color/fontGrey"

                />

        </LinearLayout>

        <View
            android:id="@+id/view5"
            style="@style/border_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"

            android:background="@color/borderGrey" />

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="300dp"

            android:layout_height="150dp"

            android:layout_gravity="center"

            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <View
            android:id="@+id/view6"
            style="@style/border_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"

            android:background="@color/borderGrey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"


                android:text="글 내용"
                android:textAppearance="?attr/textAppearanceListItem" />

            <ImageView
                android:id="@+id/imageViewDic"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:layout_gravity="center"
                android:layout_marginRight="22dp"
                android:layout_weight="0"


                android:tint="@color/fontGrey"

                />

            <TextView
                android:id="@+id/textViewLikeFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_border"
                android:layout_weight="0"

                android:padding="@dimen/margin_border"
                android:text="좋아요 n개"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCommentNum"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_margin="@dimen/text_margin"

                android:padding="@dimen/margin_border"
                android:text="댓글 n개"
                android:textSize="16sp" />


        </LinearLayout>


        <View
            android:id="@+id/lineView"
            style="@style/border_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"

            android:background="@color/borderGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_balloon"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/layoutLike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <!--   style="?android:attr/borderlessButtonStyle" 이건 그림자를 없애기 위한 코드이다.-->
                <ToggleButton
                    android:id="@+id/buttonLikeFeed"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white"


                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/likewhite"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="좋아요"
                    android:textOff="좋아요"
                    android:textOn="좋아요"
                    android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutWriteComment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:id="@android:id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"


                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/ic_comment_black"

                    android:drawablePadding="6dp"


                    android:drawableTint="@color/fontGrey"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="댓글 달기"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutAddToSet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:id="@android:id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"

                    android:background="@android:color/white"


                    android:drawableLeft="@drawable/add_list"

                    android:drawablePadding="6dp"
                    android:drawableTint="@color/fontGrey"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="단어장"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>